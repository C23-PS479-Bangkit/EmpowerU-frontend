<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="poppins_black">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="poppins_bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="poppins_medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="poppins_regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="poppins_light">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="app_name">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/red_200</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="Widget.ProgressButton.Primary" parent="">
        <item name="android:textAppearance">@style/poppins_bold</item>
        <item name="android:textColor">@drawable/text_button</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="GoogleSignInButton" parent="">
        <item name="android:textAppearance">@style/poppins_medium</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Widget.ProgressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/red_200</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="NoActionBarSplash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/red</item>
    </style>
</resources>